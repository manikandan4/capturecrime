<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_crime_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/md_theme_primaryContainer"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="@color/md_theme_surfaceContainer"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraLarge">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_view_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Colored vertical accent bar -->
        <View
            android:id="@+id/accent_bar"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:layout_marginEnd="12dp"
            android:background="@color/md_theme_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Avatar/Hero image -->
        <ImageView
            android:id="@+id/item_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_baseline_local_police_24"
            android:background="@drawable/circle_bg"
            android:scaleType="centerInside"
            android:contentDescription="@string/crime_avatar"
            app:layout_constraintStart_toEndOf="@id/accent_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title and date -->
        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/item_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chip_solved">

            <TextView
                android:id="@+id/item_crime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/md_theme_onSurface"
                android:text="@string/crime_title"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/item_crime_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:text="@string/crime_date_item"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Solved/Unsolved badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_solved"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/solved"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            app:chipIcon="@drawable/ic_baseline_done_24"
            app:chipIconTint="@color/md_theme_onPrimaryContainer"
            app:chipBackgroundColor="@color/md_theme_primaryContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/img_crimeSolved"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_done_24"
            android:contentDescription="@string/solved"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
